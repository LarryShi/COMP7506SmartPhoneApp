<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dropcard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/userProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/usericon"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

         <Button
             android:id="@+id/ReturnMain"
             android:layout_width="40dp"
             android:layout_height="30dp"
             android:layout_centerHorizontal="true"
             android:background="#fff"
             android:layout_alignParentTop="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="20dp"
             android:layout_marginTop="20dp"/>




        <RelativeLayout
            android:id="@+id/CardRootM"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#09000000">

        <ImageView
            android:id="@+id/CardBackM"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/CardFrontM"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CardRootR"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@id/CardRootM"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:background="#09000000">

        <ImageView
            android:id="@+id/CardBackR"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/CardFrontR"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CardRootL"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_toStartOf="@id/CardRootM"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:background="#09000000">

               <ImageView
                   android:id="@+id/CardBackL"
                   android:layout_width="130dp"
                   android:layout_height="200dp"
                   android:layout_centerInParent="true" />

               <ImageView
                   android:id="@+id/CardFrontL"
                   android:layout_width="130dp"
                   android:layout_height="200dp"
                   android:layout_centerInParent="true" />
               </RelativeLayout>


    </RelativeLayout>
</FrameLayout>

